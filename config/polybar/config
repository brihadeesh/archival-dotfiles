;bar-used-empty = |
;bar-used-empty-font = 5
;bar-used-empty-foreground = ${colors.gray}
;bar-used-gradient = false
;bar-font = 5

[module/redshift]
type = custom/script
interval = 0.2
exec = ~/.local/bin/polybar/redshift-button
tail = true
label = %{T3}%output%%{T}
click-left = ~/.local/bin/polybar/redshift-button toggle

################################
#######    BOTTOM BAR     ######
################################

[bar/bottom]
monitor = eDP1
width = 100%
radius = 0.0
fixed-center = true
bottom = true
height = 22

enable-ipc = true

module-margin = 1
padding-left = 2
padding-right = 1
overline-size = 2

border-top-size = 2
border-color = ${colors.gray}

modules-right = temperature filesystem 
modules-center = mpd
modules-left = hostname

background = ${colors.background}
foreground = ${colors.white}

;Systray
tray-position = right
tray-padding = 1
tray-transparent = false
tray-background = ${colors.black}
tray-detached = false
tray-scale = 1.0

font-0 = "Mononoki:size=8;2:antialias=false"
font-1 = Font Awesome 5 Free:pixelsize=9;2
font-2 = Font Awesome 5 Free Solid:pixelsize=9;2
font-3 = Font Awesome 5 Brands:pixelsize=9;2
font-4 = Tamsyn:size=8;2
font-5 = FontAwesome:size=8;2
font-6 = "Mononoki:style=Bold:size=8;2"


############################################
#######     MODULES - BOTTOM BAR     #######
############################################

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

format-mounted = <label-mounted>
label-mounted =  %percentage_used:3%%
label-unmounted = %mountpoint%: %percentage_used:3%%

[module/mpd]
type = internal/mpd

host     = 127.0.0.1
port     = 6600
interval = 2

format-online = <icon-prev> <label-time> <toggle> <label-song> <icon-next>
format-playing = ${self.format-online}
format-paused = ${self.format-online}
format-stopped = ${self.format-online}

format-spacing = 3
label-song = "%{A1:mpc toggle:}%{A3:termite --exec='ncmpcpp' & disown:}%artist%  -  %title:0:30:...%%{A-}%{A-}"
label-time = "%{A1:mpc toggle:}%{A3:termite --exec='ncmpcpp' & disown:}%elapsed% / %total%%{A-}%{A-}"

icon-play = "  "
icon-pause = "  "
icon-stop = "  "
icon-prev = "  "
icon-next = "  "

icon-prev-foreground = ${colors.orange}
icon-next-foreground = ${colors.orange}

bar-progress-width = 15
bar-progress-indicator = |
bar-progress-indicator-foreground = ${colors.red}
bar-progress-indicator-font = 1
bar-progress-fill = ─
bar-progress-fill-font = 1
bar-progress-empty = ─
bar-progress-empty-font = 1
bar-progress-empty-foreground = ${colors.gray}

[module/hostname]
type = custom/script
exec = echo "%{F#D08770}%{T7}$(uname -n)%{T-}%{F-}" "%{F#88C0D0}up%{F-}" "%{F#BF616A}$(uptime --pretty | sed 's/up //' | sed 's/\ years\?,/y/' | sed 's/\ days\?,/d/' | sed 's/\ hours\?,\?/h/' | sed 's/\ minutes\?/m/')%{F-}"
label = %output%
interval = 1

[module/temperature]
type = internal/temperature
thermal-zone = 3
warn-temperature = 60
interval = 1

format = <label> <ramp>
format-warn = <label-warn> <ramp>
format-warn-foreground = ${colors.red}

label = %{A1:termite --exec='watch sensors' & disown:} %temperature-c%%{A}
label-warn = %{A1:termite --exec='watch sensors' & disown:} %temperature-c%% {A} 
label-warn-foreground = ${colors.red}

ramp-0 = ▁
ramp-0-foreground = ${colors.gray}
ramp-1 = ▂
ramp-1-foreground = ${colors.green}
ramp-2 = ▃
ramp-2-foreground = ${colors.green}
ramp-3 = ▄
ramp-3-foreground = ${colors.yellow}
ramp-4 = ▅
ramp-4-foreground = ${colors.yellow}
ramp-5 = ▆
ramp-5-foreground = ${colors.orange}
ramp-6 = ▇
ramp-6-foreground = ${colors.orange}
ramp-7 = █
ramp-7-foreground = ${colors.red}

