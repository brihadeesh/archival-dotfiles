#!/usr/bin/polybar
;:set syn=dosini

[global/wm]
margin-top = 0
margin-bottom = 0


[colors]
white = #ECEFF4
gray = #4C566A
black = #232423
blue = #88C0D0
yellow = #EBCB8B
orange = #D08770
red = #BF616A
green = #A3BE8C
magenta = #B48EAD
background = #2E3440

#############################
######     TOP BAR     ######
#############################

[bar/top]
monitor = eDP1
radius = 0.0
fixed-center = true
bottom = false
height = 22

border-bottom-size = 2
border-color = ${colors.gray}

enable-ipc = true

padding-left = 2
padding-right = 2

module-margin = 1
 
underline-size = 2

modules-right = volume backlight cpu memory battery network updates powerbutton
modules-center = redshift date
modules-left = i3 xwindow 

background = ${colors.background}
foreground = ${colors.white}

font-0 = "Mononoki:size=8;2"
font-1 = Font Awesome 5 Free:pixelsize=9;2
font-2 = Font Awesome 5 Free Solid:pixelsize=9;2
font-3 = Font Awesome 5 Brands:pixelsize=9;2
font-4 = "Mononoki:style=Bold:size=8;2"
font-5 = FontAwesome:weight=bold:size=8;2
font-6 = fontawesome:size=10;2


#######################################
######     MODULES - TOP BAR     ######
#######################################

[module/network]
type = custom/script
exec = ~/.local/bin/polybar/check-network
click-left = networkmanager_dmenu &
click-right = networkmanager_dmenu &
;label-padding = 1
label = %output%
tail = true
interval = 0.3

[module/i3]
type = internal/i3
;format = <label-mode> <label-state>
;index-sort = true
;strip-wsnumbers = true
format = <label-state>

;label-focused-font = 3
;label-unfocused-font = 3
;label-urgent-font = 3
;label-visible-font = 3 

;label-focused = 
;label-focused = %index%
;label-focused-foreground = ${colors.blue}
;label-focused-padding = 1

;label-unfocused = 
;label-unfocused = %index%
;label-unfocused-padding = 1
;label-unfocused-foreground = ${colors.gray}

;label-urgent = 
;label-urgent = %index%!
;label-urgent-background = ${colors.red}
;label-urgent-padding = 1
;label-urgent-foreground = ${colors.red}

;label-visible = 
;label-visible = %index%
;label-visible-foreground = ${colors.white}
;label-visible-padding = 1


label-focused = %name%
label-focused-background = ${colors.gray}
label-focused-foreground = ${colors.white}
label-focused-overline  = ${colors.gray}
label-focused-padding = 2

label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.gray}
label-unfocused-overline = ${colors.background}

label-occupied = %name%
label-occupied-padding = 1

label-urgent = 
label-urgent-background = ${colors.red}
label-urgent-overline  = ${colors.red}
label-urgent-padding = 2

label-empty = %name%
label-empty-foreground = ${colors.gray}
label-empty-overline = ${colors.background}
label-empty-padding = 1

index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.gray}

label-visible = %name%
label-visible-overline = ${colors.background}
label-visible-padding = 2

format-padding-right = 1

[module/xwindow]
type = internal/xwindow
label =   %title:0:40:...%
label-empty = [  Desktop  ]
label-empty-foreground = ${colors.gray}

[module/battery]
type = custom/script
exec = ~/.local/bin/polybar/batt
label = %output% 


;type = internal/battery
;battery = BAT1
;adapter = AC
;full-at = 100
;interval = 1

;format-charging = <label-charging>
;label-charging =  %percentage:3%%

;format-discharging = <ramp-capacity> <label-discharging>
;label-discharging = %percentage:3%%

;format-full = <label-full>
;label-full =  %percentage:3%%

;ramp-capacity-0 = 
;ramp-capacity-0-font = 7 
;ramp-capacity-1 = 
;ramp-capacity-1-font = 7
;ramp-capacity-2 = 
;ramp-capacity-2-font = 7
;ramp-capacity-3 = 
;ramp-capacity-3-font = 7
;ramp-capacity-4 = 
;ramp-capacity-4-font = 7
;ramp-capacity-0-foreground = ${colors.red}
;ramp-capacity-1-foreground = ${colors.orange}
;ramp-capacity-2-foreground = ${colors.yellow}
;ramp-capacity-foreground = ${colors.white}

[module/date]
type = internal/date
date = "%{A1:gsimplecal & disown:}%{T5}%a %m/%d - %H:%M%{T-}%{A}"
interval = 1
format-padding = 1

[module/updates]
type = custom/script
exec = ~/.local/bin/polybar/updates-arch-combined
;exec = echo '%{F${colors.gray}}  0 %{F-}'
interval = 20
label = %output%
click-right = rofi -e  "Start update?" && termite -e "sudo pacman -Syu"

[module/powerbutton]
type = custom/text
content-background = ${colors.red}
content-padding = 1
content = 
click-left = ~/.local/bin/polybar/power-menu -c -p rofi

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage:3%% 
label-volume-foreground = ${root.foreground}

format-muted-foreground = ${colors.gray}
label-muted =  %percentage:3%%

ramp-volume-0 = 
ramp-volume-0-foreground = ${colors.gray}
ramp-volume-1 = 
ramp-volume-1-foreground = ${colors.yellow}
ramp-volume-2 = 
ramp-volume-2-foreground = ${colors.orange}
ramp-volume-3 = 
ramp-volume-3-foreground = ${colors.red}

;bar-volume-width = 30
;bar-volume-foreground-0 = ${colors.blue}
;bar-volume-foreground-1 = ${colors.blue}
;bar-volume-foreground-2 = ${colors.yellow}
;bar-volume-foreground-3 = ${colors.red}
;bar-volume-indicator-foreground = ${colors.white}
;bar-volume-gradient = false
;#bar-volume-indicator = 
;bar-volume-indicator = |
;bar-volume-indicator-font = 5
;bar-volume-fill = ─
;bar-volume-fill = |
;bar-volume-fill-font = 5
;#bar-volume-empty = ─
;bar-volume-empty = |
;bar-volume-empty-font = 5
;bar-volume-empty-foreground = ${colors.gray}

[module/backlight]
type = internal/xbacklight
card = intel_backlight
interval = 1
format = <ramp> <label>
scroll-up = "xbacklight -inc 5 -steps 30; notify-send 'brightness up'"
scroll-down = "xbacklight -dec 5 -steps 30; notify-send 'brightness down'"

ramp-0 = 
ramp-0-font = 3
ramp-1 = 
ramp-1-font = 3
ramp-2 = 
ramp-2-font = 3
ramp-3 = 
ramp-3-font = 3

ramp-0-foreground = ${colors.gray}
ramp-1-foreground = ${colors.yellow}
ramp-2-foreground = ${colors.orange}
ramp-3-foreground = ${colors.red}

label = %percentage:3%%

[module/cpu]
type = internal/cpu
interval = 0.5

format = <label> <ramp-coreload>

label = %{A1:termite --exec=htop & disown:} %percentage:3%%%{A}

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █
