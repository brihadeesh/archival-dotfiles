#!/usr/bin/polybar ~/.config/bspwm/config-polybar

[global/wm]
margin-top = 0
margin-bottom = 0

############################
######    SETTINGS    ######
############################
[settings]
screenchange-reload = true


############################
######     COLORS     ######
############################
[colors]
white = #ECEFF4
