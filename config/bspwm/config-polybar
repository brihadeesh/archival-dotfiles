;include ~/Misc/nord-xresources/src/nord


#############################
######    BSPWM BAR    ######
#############################
[bar/bspwm]
monitor = eDP1
radius = 0.0
fixed-center = true
bottom = false
height = 24

border-bottom-size = 2
border-color = ${colors.gray}

enable-ipc = true

padding-left = 1
