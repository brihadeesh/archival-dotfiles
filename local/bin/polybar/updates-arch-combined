#!/bin/sh

# if ! updates=$(cower -u 2> /dev/null | wc -l); then
if ! updates=$(trizen -Su --aur --quiet | wc -l); then
    updates=0
fi

if [ "$updates" -gt 0 ]; then
    echo "%{F#BF616A} $updates%{F-}" ; sleep 0.6
    echo "%{F#D08770} $updates%{F-}" ; sleep 0.6
else
    echo "%{F#4C566A} 0%{F-}"
fi



